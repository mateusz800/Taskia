<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Taskia" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Theme.Taskia.WithActionBar" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:actionBarStyle">@style/Theme.Taskia.ActionBar</item>
    </style>

    <style name="Theme.Taskia.ActionBar"  parent="android:ThemeOverlay.Material.Dark.ActionBar">
        <item name="android:background">@color/caribbean_green</item>
        <item name="android:titleTextStyle">@style/Theme.Taskia.ActionBar.Text</item>
    </style>

    <style name="Theme.Taskia.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.SplashScreenTheme" parent="Theme.Taskia">
        <item name="postSplashScreenTheme">@style/Theme.Taskia</item>
        <item name="windowSplashScreenAnimationDuration">800</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>