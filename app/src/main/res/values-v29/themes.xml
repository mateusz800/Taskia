<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Taskia" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="Theme.Taskia.WithActionBar" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:actionBarStyle">@style/Theme.Taskia.ActionBar</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:titleTextColor">@color/black</item>
        <item name="android:colorControlNormal">@color/black</item>
        <item name="android:enforceNavigationBarContrast">false</item>
    </style>

</resources>